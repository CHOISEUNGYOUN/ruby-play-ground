<h1>My portfolio</h1>

<div class="search-area">
  <h3>Search Stock</h3>
  <%= form_tag [:search, :stock], remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-6 pr-0">
        <%= text_field_tag :stock, params[:stock],
                           placeholder: "Stock ticker symbol",
                           autofocus: true,
                           class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon "search 2x" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results" class="mb-3">
</div>
<% if @tracked_stocks.any? %>
  <%= render "stock_table" %>
<% end %>