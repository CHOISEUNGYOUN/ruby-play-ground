<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
      <div class="form-group row">
        <%= form.label :name, "Category name", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= form.submit class: "btn btn-outline-light btn-lg" %>
      </div>
      <% end %>
    </div>
    <div class="mb-3">
      <div class="form-group row justify-content-center">
        <%= link_to "[ Cancel and return to category ]", @category.valid? ? category_path : categories_path, class: "text-center text-info" %>
      </div>
    </div>
  </div>
</div>