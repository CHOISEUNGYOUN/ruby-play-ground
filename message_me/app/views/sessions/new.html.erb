<div class="container flex justify-center mb-8">
  <h3>Welcome to MessageMe - <em>a complete Chat App</em></h3>
</div>
<h3 class="ui center aligned icon header"><i class="circular power off orange icon relaxed"></i></h3>
<div class="container flex justify-center">
  <h4>Log in to continue</h4>
</div>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: { class: "ui form" }, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>